<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.SchedulingView"
             Title="{Binding Scheduling.Vehicle.Name}">

    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection Title="Your informations">
                        <EntryCell Label="Name:" Text="{Binding Scheduling.Name}"/>
                        <EntryCell Label="Telephone:" Keyboard="Telephone" Text="{Binding Scheduling.Telephone}"/>
                        <EntryCell Label="E-mail:" Keyboard="Email" Text="{Binding Scheduling.Email}"/>
                    </TableSection>
                    <TableSection Title="Scheduling">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Margin="12,0,0,0">
                                <Label Text="Date:"></Label>
                                <DatePicker Date="{Binding Scheduling.SchedulingDate}" ></DatePicker>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Margin="12,0,0,0">
                                <Label Text="Time:"></Label>
                                <TimePicker Time="{Binding Scheduling.SchedulingTime}"></TimePicker>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="buttonScheduling" Text="Schedule" Clicked="buttonScheduling_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>