<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.SchedulingsListView">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="LsitViewSchedulings"  ItemsSource="{Binding List}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding FormatedDate}" VerticalTextAlignment="Center" FontSize="20"/>
                                    <Label Text=" - " VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Model}" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>